<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/cardView">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="This is fucking test for this fucking issue I hope that it could help this."
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/news_view_item_title"
                    android:textColor="@color/blue_gray_700"

                    app:layout_constraintStart_toEndOf="@+id/news_view_item_points"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_gray_700"
                    android:id="@+id/news_view_item_time_ago" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_gray_400"
                    android:id="@+id/news_view_item_user" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_gray_300"
                    android:id="@+id/news_view_item_link" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/news_view_item_user"/>
            <TextView
                    android:textColor="@color/red_500"
                    android:drawableStart="@drawable/ic_comment_24px"
                    android:drawablePadding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_view_item_comment" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/news_view_item_time_ago"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
            <TextView
                    android:drawableStart="@drawable/ic_points_24px"
                    android:drawablePadding="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/blue_gray_900"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_view_item_points" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_more_vert_24px"
                    android:id="@+id/news_view_item_menu_imageView" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/news_view_item_title" android:layout_marginStart="8dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>